  = form_tag admin_import_teachers_path, :multipart => true do
    = label_tag 'School'
    = select_tag :school_id, options_for_select(School.order('schools.name asc').all.collect {|s| [s.name, s.id]})
    .field
      = file_field_tag :file
    = submit_tag 'Import Teachers'
%br
%br
.interest_handler
  %h4 Run Student Interest Worker
  = link_to 'Run Interest Worker', admin_handle_interest_path


:javascript
  $('input:submit').click(function(e) {
    if ($(e.currentTarget).closest('form').find('input:file').val() == "") {
      e.preventDefault();
      alert('Please select a file to upload.')
    }
  });
