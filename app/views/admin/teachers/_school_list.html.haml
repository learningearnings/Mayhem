%h2= @teacher.name

= form_for [:admin,@teacher],:url => add_school_admin_teacher_path, :method => 'post' do |f|
  = select_tag :school_id, options_for_select(School.all.collect {|s| [s.name, s.id]}), :include_blank => true
  =# select_tag :school_id, options_for_select(School.all.map{|x| x.name}, :school), :include_blank => true
  = f.submit 'Add School'

%h4 Schools
%table
  %thead
    %tr
      %th School Name
      %th Remove
  %tbody
    - @teacher.schools.each do |school|
      %tr
        %td= link_to school.name, admin_school_path(school)
        %td= link_to 'Remove', delete_school_admin_teacher_path(:school_id => school.id, :teacher => @teacher), :method => :delete

%h4 Accounts
%table
  %thead
    %tr
      %th Name
      %th Balance
      %th Add Credits
  %tbody
    - @teacher.schools.each do |school|
      - @teacher.accounts(school).each do |account|
        %tr
          %td= link_to account.name
          %td= account.balance
          %td{:style => "width: 400px;"}
            - if account.name == @teacher.main_account_name(school)
              = form_for [:admin, @teacher], :url => give_credits_admin_teacher_path, :method => 'post' do |f|
                = f.hidden_field :school_id, :value => school.id
                = text_field :credits,:amount, :style => "width: 30%;"
                = f.submit 'Add Credits'


