- @polls.each do |poll|
  .poll
    %h5= poll.question
    = form_for Vote.new do |f|
      - poll.poll_choices.each do |choice|
        = hidden_field_tag :poll_id, poll.id
        = f.label choice.choice
        = f.radio_button(:poll_choice_id, choice.id)
        = "#{choice.votes.count} Votes"
      %br
      = f.submit 'Vote'
