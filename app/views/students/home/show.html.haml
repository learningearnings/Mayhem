.student-logged-in-content
  .bacon-small
  .corkboard
    .whats-new
      - if current_school.name == 'STI'
        .welcome-sticky
          .welcome-callout
            .king_font_welcome DON'T FORGET TO PICK-UP YOUR REWARDS BY:
            .sketch_font_welcome
 
              1:15 pm on
              %br/
              DAY 2 of the SEMINAR
      - else
        = @whats_new.body.html_safe
    - if current_school.name == 'STI'
      .featured-activity
        %div.king_font
 
          Don't Miss.......
        %div.sketch_font
          Social Hour
        %div.sketch_font2
          5-6 PM Day 1
    - else
      .featured-activity
        = @featured_activity.body.html_safe
    .featured-activity-callout
      = @featured_activity_callout.body.html_safe
