.full-content
  %h2 Your Profile

  .row
    .span2
      .avatar= image_tag(@person.avatar.image.url) if @person.avatar
    .span3
      %dl.details
        %dt Name
        %dd= @person.first_name + @person.last_name
        %dt Username
        %dd= @person.user.username
        - if !current_person.is_a? Student
          %dt Email
          %dd= @person.user.email
        - if current_person.is_a? Teacher
          %dt Game Challengeable?
          %dd= @person.game_challengeable
    .span3
      %dl.details
        %dt School
        %dd= @person.school.name

      .link
        - if @person.sti_id
          This user was imported from iNow and can not be edited. You must edit this user in iNow.
        - else
          = link_to "Edit", edit_person_path(@person.id), class: 'btn awesome-button'
