.full-content
  %h2 Your Profile

  .row
    .span2
      .avatar= image_tag(@person.avatar.image.url) if @person.avatar
    .span6
      %dl.details
        %dt Name
        %dd= @person.first_name + @person.last_name
        %dt Username
        %dd= @person.user.username
        %dt Email
        %dd= @person.user.email
        %dt Moniker
        %dd= @person.moniker
        %dt School
        %dd= @person.school.name

      .link
        = link_to "Update", edit_person_path(@person.id), class: 'btn awesome-button'
