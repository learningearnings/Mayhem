.locker_show
  %h2 My Locker

  .locker_wrapper
    = render 'locker_stickers', locker_sticker_links: locker_sticker_links
  .locker_buttons
    = link_to 'Decorate My Locker', edit_locker_path, class: 'btn'
    = link_to 'Share My Locker', share_locker_path, class: 'btn', "data-toggle" => 'modal', 'data-target' => '#share-locker-modal'
    = link_to "Visit My Friend's Locker", friends_locker_path, class: 'btn', "data-toggle" => 'modal', 'data-target' => '#visit-locker-modal'

  #share-locker-modal.modal.hide
    .modal-body

  #visit-locker-modal.modal.hide
    .modal-body
