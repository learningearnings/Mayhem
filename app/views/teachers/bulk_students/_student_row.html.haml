- if defined? errors
  %tr.error_row
    %td{colspan: 99}
      %strong= errors.full_messages.to_sentence
%tr
  %td.text.first= text_field_tag 'students[]first_name', options[:first_name], class: 'first'
  %td.text.last= text_field_tag 'students[]last_name', options[:last_name], class: 'last'  
  %td.text.username= text_field_tag 'students[]user[username]', options[:username], class: 'username'
  %td.text.password= text_field_tag 'students[]user[password]', options[:password], class: 'password'
  %td.select.grade= select_tag 'students[]grade', options_for_select(grades), class: 'grade'
  %td.select.classroom= select_tag 'students[]classroom_id', options_from_collection_for_select(classrooms, "id", "name"), class: 'classroom'
  %td.select.gender= select_tag 'students[]gender', options_for_select(['Male', 'Female']), class: 'gender'
  %td
    = link_to 'Remove Row', '#', class: 'delete_row btn'
