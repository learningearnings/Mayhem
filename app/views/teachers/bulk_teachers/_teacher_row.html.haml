- if defined? errors
  %tr.error_row
    %td{colspan: 99}
      %strong= errors.full_messages.to_sentence
%tr
  %td.text.first= text_field_tag 'teachers[]first_name', options[:first_name], class: 'first'
  %td.text.last= text_field_tag 'teachers[]last_name', options[:last_name], class: 'last'
  %td.text.email= text_field_tag 'teachers[]user[email]', options[:email], class: 'email'
  %td.text.username= text_field_tag 'teachers[]user[username]', options[:username], class: 'username'
  %td.text.password= text_field_tag 'teachers[]user[password]', options[:password], class: 'password'
  %td.select.grade= select_tag 'teachers[]grade', options_for_select(grades), class: 'grade'
  %td.select.gender= select_tag 'teachers[]gender', options_for_select(['Male', 'Female']), class: 'gender'
  %td
    = link_to 'Remove Row', '#', class: 'delete_row btn'

