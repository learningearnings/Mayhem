- if defined? errors
  %tr.error_row
    %td{colspan: 99}
      %strong= errors.full_messages.to_sentence
%tr
  %td.checkbox.selected= check_box_tag 'teachers[][id]', options[:id], options[:selected], class: 'selected row_checkbox'
  %td.text.first
    .edit= text_field_tag 'teachers[]first_name', options[:first_name], class: 'first edit_control'
    .display= options[:first_name]
  %td.text.last
    .edit= text_field_tag 'teachers[]last_name', options[:last_name], class: 'last edit_control'
    .display= options[:last_name]
  %td.text.email
    .edit= text_field_tag 'teachers[]user[email]', options[:email], class: 'email edit_control'
    .display= options[:email]
  %td.text.username
    .edit= text_field_tag 'teachers[]user[username]', options[:username], class: 'username edit_control'
    .display= options[:username]
  %td.select.grade
    .edit= select_tag 'teachers[]grade', options_for_select(current_school.grades.map(&:reverse), selected: options[:grade]), class: 'grade edit_control'
    .display= options[:grade]
  %td.select.gender
    .edit= select_tag 'teachers[]gender', options_for_select(['', 'Male', 'Female'], selected: options[:gender]), class: 'gender edit_control'
    .display= options[:gender]
  %td.text.password
    .edit= text_field_tag 'teachers[]user[password]', options[:password], class: 'password edit_control'
    .display= options[:password]
