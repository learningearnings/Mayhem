.main-content-wrapper
  .primary-content
    %h2 Teacher Home
    .distribute-credits
      %h3 Distribute Credits
      %p Click below to distribute credits to students currently enrolled.  Credits will be automatically deducted from your account and immediately available to students once deposited.  Yippe!
      %dl.balance
        %dt Checking Balance:
        %dd= current_person.main_account(current_school).balance

      - if current_person.is_a? SchoolAdmin
        .distribute-credits-link= link_to('Distribute credits', school_admins_bank_path, class: 'btn awesome-button')
      - else
        .distribute-credits-link= link_to('Distribute credits', teachers_bank_path, class: 'btn awesome-button')

    %h3 Reports
    %hr
    %h4= link_to "Purchases Report", purchases_report_path
    %h4= link_to "Student Roster",   student_roster_report_path
    %h4= link_to "Activity Report",  activity_report_path
    %h4= link_to "Student Credit History Report",  student_credit_history_report_path
    - if current_person.is_a? SchoolAdmin
      %hr
      %h4= link_to "School Settings",  schools_settings_path
      %h4= link_to "Imports", school_admins_dashboard_path


  .secondary-content
    %h4 Reward Highlights
