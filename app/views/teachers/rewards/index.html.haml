.main-content-wrapper
  .full-content
    %h1 Your Rewards
    .resp-product
      - if @teachers_rewards.any?
        .resp-product-row
          - @teachers_rewards.in_groups_of(2) do |grp|
            - grp.each do |tr|
              - next if tr.nil?
              = render :partial => 'line_item', :locals => { :product => tr }
  = link_to 'New Reward', new_teachers_reward_path

