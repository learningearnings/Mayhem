- buck_image_pdf = Rails.root.join('app', 'assets', 'images', 'buck_blank.png')
- font_url_pdf = Rails.root.join('public', 'SketchRockwell-Bold.ttf')
- font_url_html = "/SketchRockwell-Bold.ttf"
- font_url = params[:format] == "pdf" ? font_url_pdf : font_url_html
- buck_image_html = image_path('buck_blank.png')
- buck_image = params[:format] == 'pdf' ? buck_image_pdf : buck_image_html
%meta{'http-equiv' => "Content-Type", :content => "text/html; charset=utf-8"}
:css
  @font-face {
    font-family: 'SketchRockwell';
    src: url('#{font_url}') format('truetype');
  }
%style{type: 'text/css'}
  :sass
    body
      margin: 0mm
      padding: 0mm
      font-size: 70%
      width: 945px
    .break
      page-break-after: always
    .buck
      position: relative
      //background-image: url(#{buck_image})
      //background-size: 100%
      display: inline-block
      //background-color: #eee
      width: 300px
      margin-right: 10px
      .background-image
        width: 100%
      .code
        width: 30%
        text-align: center
        position: absolute
        top: 52%
        left: 55%
        font-size: 2em
        font-family: SketchRockwell
        color: red
      .amount
        width: 5%
        text-align: center
        position: absolute
        font-size: 1.8em
        font-family: SketchRockwell
      .amount1
        top: 21%
        left: 25%
        font-size: 3em
      .expires
        width: 40%
        position: absolute
        top: 78%
        left: 60%
        font-size: 2em
        font-family: SketchRockwell
        color: red

.bucks
  - batch.otu_codes.in_groups_of(18,false) do |code_group|
    .break
    - code_group.each do |otu_code|
      .buck
        %img.background-image{ src: buck_image }
          .code= otu_code.code
          .amount.amount1= otu_code.points.to_i
          .expires= otu_code.expires_at.to_date.to_s(:db)
