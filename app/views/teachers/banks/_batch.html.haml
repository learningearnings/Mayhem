- buck_image_pdf = Rails.root.join('app', 'assets', 'images', 'buck_blank.jpg')
- buck_image_html = image_path('buck_blank.jpg')
- buck_image = params[:format] == 'pdf' ? buck_image_pdf : buck_image_html

%style{type: 'text/css'}
  :sass
    body
      margin: 0mm
      padding: 0mm
      font-size: 70%
    .buck
      position: relative
      //background-image: url(#{buck_image})
      //background-size: 100%
      display: inline-block
      //background-color: #eee
      width: 300px
      height: 126px
      margin-right: 10px
      .background-image
        width: 100%
      .code
        width: 30%
        text-align: center
        position: absolute
        top: 40%
        left: 35%
      .amount
        width: 5%
        text-align: center
        position: absolute
        font-size: 1.8em
        color: #999
      .amount1
        top: 12%
        left: 5%
      .amount2
        top: 12%
        right: 6%
      .amount3
        bottom: 14%
        left: 5%
      .amount4
        bottom: 14%
        right: 6%
      .teacher
        width: 70%
        position: absolute
        top: 55%
        left: 16%
      .expires
        width: 40%
        position: absolute
        top: 72%
        left: 16%

.bucks
  - batch.otu_codes.each do |otu_code|
    .buck
      %img.background-image{ src: buck_image }
      .code= otu_code.code
      .amount.amount1= otu_code.points.to_i
      .amount.amount2= otu_code.points.to_i
      .amount.amount3= otu_code.points.to_i
      .amount.amount4= otu_code.points.to_i
      .teacher= otu_code.teacher
      .expires= otu_code.expires_at.to_date.to_s(:db)
