.span8
  %h3 Send Message To Peer
  = form_for message do |f|
    .select-message
      %strong Peer
      = f.select :to_ids, options_from_collection_for_select(peers, :id, :name), { }, { multiple: true }
      = f.label :subject
      = f.text_field :subject
      = f.label :body
      = f.text_area :body
      = f.submit "Send Message", class: 'btn btn-primary'
