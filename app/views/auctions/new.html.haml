%h2 Create New Auction Reward

= form_tag create_auction_reward, :method => :post do
  = f.hidden_field_tag :fullfillment_type, :value => "Auction Reward"
  = f.label_tag :auction_reward_name
  = f.text_field_tag :auction_reward_name
  = f.label_tag :auction_reward_description
  = f.text_area_tag :auction_reward_description
  = f.label_tag :auction_reward_image
  = f.input :auction_reward_image, :as => :file


%h2 Create an Auction for your School

= semantic_form_for @auction do |f|
  = f.label :product
  = f.select :product_id, @products.map{|p| [p.name, p.id] }
  = f.label :start_date
  = f.text_field :start_date, :id => 'datepicker'
  = f.label :end_date
  = f.text_field :end_date, :id => 'datepicker2'
  = f.label :min_grade
  = f.select :min_grade, School::GRADES
  = f.label :max_grade
  = f.select :max_grade, School::GRADES
  %br
  = f.submit

:javascript
  $(function() {
    $('#datepicker').datetimepicker();
  });
  $(function() {
    $('#datepicker2').datetimepicker();
  });
