#add-line-item{"data-hook" => ""}
  %fieldset
    %legend= t(:manual_order)
    - @school_inventory_items.each do |item|
      %div{"data-hook" => "shipped_for_school_inventory", :style => "float:left; width:10%; margin-right:5%;"}
        = label_tag item.name
      %div{"data-hook" => "add_quantity", :style => "float:left; width:10%; margin-right:5%;"}
        = label_tag :add_quantity, t(:qty)
        = number_field_tag :add_quantity,  1, :min => 0, :class => 'fullwidth title'
      %div{"data-hook" => "add_button", :style => "float: left; width: 15%; padding-top: 17px;"}
        = link_to text_for_button_link(t(:add), :icon => 'add'), admin_order_line_items_url(@order), :method => :post, :id => 'add_line_item_to_order', :class => 'button', 'data-update' => 'order-form-wrapper'
