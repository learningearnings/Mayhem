- content_for :sidebar do
  %div{ "data-hook" => "homepage_sidebar_navigation" }
    - if "products" == @current_controller && @taxon
      = render :partial => 'spree/shared/filters'
    - else
      = render :partial => 'spree/shared/taxonomies'

.main-content-wrapper
  .full-content
    %h2= t('.products', :school => current_school_name, :scope => [store_type])
    - if current_person.is_a?(Teacher)
      %p
        = t('.products_message', :scope => [store_type,current_person.type.downcase])
        %a{:href => main_app.teachers_rewards_path, :class => 'btn awesome-button'} Create Your Own Rewards
    %div{"data-hook" => "homepage_products"}
      = render :partial => 'spree/shared/products', :locals => { :products => @products }

.auctions
  %h2 School Auctions
  %h5= link_to 'New Auction', new_auction_path
  %h5= link_to 'All Auctions', auctions_path

