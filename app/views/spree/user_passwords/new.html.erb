<div class="main-content-wrapper">
	<%= render :partial => 'spree/shared/error_messages', :locals => { :target => @spree_user } %>
	
	<div id="forgot-password">
	  <h1><%= 'Forgot Password?' %></h1>
	
	  <p><%="STUDENTS, please ask a teacher to update your password.  Students passwords cannot be updated or reset via email, only teacher accounts."  %></p>
	  <%= form_for(resource, :as => resource_name, :url => reset_password_path(resource_name), :html => { :method => :post }) do |f| %>
	    <p>
	      <%= f.label :email %><br />
	      <%= f.email_field :email %>
	    </p>
	    <p>
	      <%= f.submit 'Reset Password', :class => 'button primary' %>
	    </p>
	  <% end %>
	</div>
</div>
