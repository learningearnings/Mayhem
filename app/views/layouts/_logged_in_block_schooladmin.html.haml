.current-user-avatar.supplemental-part
  - if current_user.avatar.present?
    = image_tag current_user.avatar.image.thumb('175x175#').url
.current-user.supplemental-part
  %h3= current_user.email
  %p= link_to "Edit My Profile", spree.edit_user_path(current_user)
  %p= link_to 'Sign out', spree.destroy_user_session_path, :method => :delete
  %h4 Credit Balance
  %table.table.table-bordered
    %thead
      %tr
        %th Main
        %th Unredeemed
        %th Undeposited
    %tbody
      %tr
        - if current_person
          %td= number_to_currency(current_user.person.main_account(current_person.schools.first).balance)
          %td= number_to_currency(current_user.person.unredeemed_account(current_person.schools.first).balance)
          %td= number_to_currency(current_user.person.undeposited_account(current_person.schools.first).balance)
        - else
          %td=number_to_currency(0.00)
          %td=number_to_currency(0.00)

  %p
    %strong
      Messages:
    = link_to '2', main_app.page_path('logged_in_inbox')
