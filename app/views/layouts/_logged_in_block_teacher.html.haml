.current-user-avatar.supplemental-part
  - if current_user.avatar.present?
    = image_tag current_user.avatar.image.thumb('175x175#').url
.current-user.supplemental-part
  %h3= current_user.email
  %p= link_to "Edit My Profile", spree.edit_user_path(current_user)
  %p= link_to 'Sign out', spree.destroy_user_session_path, :method => :delete
  %table.table.table-bordered
    %thead
      %tr
        %th Credits Available
    %tbody
      - if current_person
        - current_person.balance.each do |b|
          %tr
            %td=b
      - else
        %tr
          %td=number_to_currency(0.00)
  %p
    %strong
      Messages:
    = link_to '2', main_app.page_path('logged_in_inbox')
