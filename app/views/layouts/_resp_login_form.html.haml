%div.login-div
  %h1 Welcome to Learning Earnings!
  = form_tag spree.user_session_path, :class => 'form-inline resp-login-form-fields', autocomplete: 'off' do
    .log-in-form  
      %ul
        %li= text_field_tag 'user[username]', nil, :placeholder => "Username", :id => "login-username"
        %li= password_field_tag 'user[password]', nil, :placeholder => "Password" , :id => "login-password"
        %li= select_tag 'user[school_id]',options_from_collection_for_select(login_schools_list, :id, :name_and_location, last_school_id_or_by_subdomain), :class => 'chzn-select', prompt: "School", :id => "login-school"
        %button Sign in  
      .resp-forgot-password
        = link_to "Forgot Username/Password?", spree.new_user_password_path('user'), tabindex: "-1"
      %ul.join-links
        %li
          .middle-line
            %span.middle-line-text First time here?
        %li
          %span= link_to "Create an Account", main_app.new_teachers_path, class: 'btn students'
        %li
          =image_tag('logo-powerschool-ondark.png', class: "login-logo")
        %li
          %span#login-footer 
            Copyright &copy; 2016 Learning Earnings. All Rights Reserved. 
            = link_to "Privacy Policy", main_app.page_path("privacy")
    .messages-container
      = render "layouts/flashes"         
          
    :coffeescript
      ($ "document").ready ->
        $(".chzn-select").chosen({width: "450px"});
        
        $(".chosen-results").css('font-family','Open Sans');
        $(".chosen-results").css('color','black');        
        $(".chosen-results").css('font-size','14px');
        $(".chosen-results").css('text-align','left');        
        
        $(".chosen-single").css('text-align','left');   
        $(".chosen-single").css('height','50px');    
        $(".chosen-single").css('font-family','Open Sans');
        $(".chosen-single").css('color','black');        
        $(".chosen-single").css('font-size','16px');  
        $(".chosen-single").css('background','white');       
        $(".chosen-single").css('padding-top','10px');              
                   
