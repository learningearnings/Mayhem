.current-user-avatar.supplemental-part
  - if current_user.avatar.present?
    = image_tag current_user.avatar.image.thumb('135x135#').url
.current-user.supplemental-part
  .credit-balance
    %h4 Credit Balance
    %table.table.table-bordered
      %thead
        %tr
          %th Checking
          %th Savings
      %tbody
        %tr
          %td= current_person.checking_balance
          %td= current_person.savings_balance
  .person-details
    %h3= current_person.full_name
    %ul.links
      %li= link_to "Edit My Profile", spree.edit_user_path(current_user)
      %li= link_to 'Sign out', spree.destroy_user_session_path, :method => :delete

    %p
      %strong
        Messages:
      = link_to current_person.received_messages.unread.count, main_app.inbox_path
