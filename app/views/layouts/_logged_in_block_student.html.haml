.current-person-avatar.supplemental-part
  = avatar_for(current_person, '80x80#')
.current-person.supplemental-part
  .credit-balance
    %table.table
      %thead
        %tr
          %th.cb-heading-primary{:colspan => "2"} Credit Balance
      %tbody
        %tr
          %td.table-bordered-tl.cb-heading Checking
          %td.table-bordered-tr.cb-value.currency= number_with_precision(current_person.checking_balance, precision: 2)
        %tr
          %td.table-bordered-bl.cb-heading Savings
          %td.table-bordered-br.cb-value.currency= number_with_precision(current_person.savings_balance, precision: 2)
  .person-details
    %h3= current_person.full_name
    %ul.links
      %li= link_to "Edit My Profile", main_app.person_path(current_person)
      %li= link_to 'Sign out', spree.get_destroy_user_session_path
