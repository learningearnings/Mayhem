= form_tag spree.user_session_path do
  %ul.login-form-fields
    %li
      %span.log-in LOG-IN
    %li
      = text_field_tag 'user[username]', nil, :placeholder => 'Username'
    %li
    = password_field_tag 'user[password]', nil, :placeholder => 'Password'
    %li
    %label.supplemenal-login-form @
    = select_tag 'user[school_id]',options_from_collection_for_select(School.select("id,name").all,:id,:name)
    %li
      %button.btn.login-button  Log In
  .forgot-password
    = link_to "Forgot your password?", spree.new_user_password_path('user')
