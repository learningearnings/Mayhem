.resp-supplemental-part
  .current-person
    .credit-balance
      %table.table
        %thead
          %tr
            %th.cb-heading-primary{:colspan => "2"} Credit Balance
        - cache "#{current_person.id}_balances", :expires_in => 1.hour do
          %tbody
            %tr
              %td.table-bordered-tl.cb-heading Checking
              %td.table-bordered-tr.cb-value.currency= number_with_precision(current_person.checking_balance, precision: 2, delimiter: ',')
            %tr
              %td.table-bordered-bl.cb-heading Savings
              %td.table-bordered-br.cb-value.currency= number_with_precision(current_person.savings_balance, precision: 2, delimiter: ',')
    .person-details
      %h3= current_person.full_name
      %ul.links
        %li= link_to "Edit My Profile", main_app.person_path(current_person)
        %li= link_to 'Sign out', spree.get_destroy_user_session_path
    .avatar
      = avatar_for(current_person, '80x80#')
