.main-content-wrapper
  .primary-content-fw

    %h2 Student Roster Report

    .filter
      %h4 Filter By
      = form_tag student_roster_report_path, method: :get do
        .grade-filter
          = label_tag :grade
          = select_tag :grade_filter, "<option value='all'>All</option>".html_safe + options_from_collection_for_select(grades, :first, :last, params[:grade_filter])
        .classroom-roster
          = label_tag :classroom
          = select_tag :classroom, "<option value='all'>All</option>".html_safe + options_from_collection_for_select(classrooms, :id, :name, params[:classroom])
        .grade
          = submit_tag 'Go!'
    .sorting
      %h4 Sort By
      = select_tag :sort_by, options_for_select(["Default", "First, Last", "Last, First", "Username", "Grade"], params[:sort_by])   
    .report
      %table.table.table-bordered.table-striped.solid-background
        %thead
          %tr
            - report.header_strings.each do |header|
              %th= header
        %tbody
          - report.data_rows do |row|
            %tr
              - report.header_keys.each do |key|
                %td= row.send(key)
