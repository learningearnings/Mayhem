.main-content-wrapper
  .primary-content-fw
    %h2 Activity Report
    %h3= report.range
    = simple_form_for :activity_report,  :url => activity_report_path, method: :post, :html => {:class => 'form-horizontal noprint'} do |f|
      .filter
        = f.input :date_filter,:label => "Date Range", :collection => date_filter_options
      .sorting
        = f.input :sort_by,:label => "Sorting", :collection => ["Default", "First, Last", "Last, First", "Username"]
      = f.submit 'Go!'

    .report
      %table.table.table-bordered.table-striped.solid-background
        %thead
          %tr
            - report.header_strings.each do |header|
              %th= header
        %tbody
          - report.data_rows do |row|
            %tr
              - report.header_keys.each do |key|
                %td{:class => report.data_classes[key]}= row.send(key)
