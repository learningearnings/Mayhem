      .accordion-inner
        .message
          .image= image_tag("http://placekitten.com/50/50")
          .content
            %p.subject= lipsum(50)
            = link_to "Read Message", '#read-message-modal', class: 'btn', "data-toggle" => 'modal'
        .message
          .image= image_tag("http://placekitten.com/50/50")
          .content
            %p.subject= lipsum(50)
            = link_to "Read Message", '#read-message-modal', "data-toggle" => 'modal'

= link_to "Send a message", '#send-message-modal', class: 'btn', 'data-toggle' => 'modal'

#read-message-modal.modal
  %h3 Read Message Header
  .image-placeholder
    Message
  = link_to "Reply to this message", "#", class: 'btn btn-primary'

#send-message-modal.modal
  %h3 Send Message Header
  %p= lipsum 100
  .row
    .span3
      .select-message
        %strong Select Message
        = select_tag "Select Your Message..."
      .select-recipient
        %strong Select Who To Send It To
        .image-placeholder
          Paginated Friend List
    .span2
      %strong Select Image
      %p images here...
  = link_to "Preview Message", "#", class: 'btn btn-primary'
