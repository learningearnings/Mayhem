%h2 My Inbox Header

%p= lipsum(100)

#inbox-accordion.accordion.inbox
  .accordion-group
    .accordion-heading
      = link_to 'Friend Messages (2)', '#friend-messages', class: 'accordion-toggle', 'data-parent' => '#inbox-accordion', 'data-toggle' => 'collapse'
    #friend-messages.accordion-body.collapse.in
      .accordion-inner
        - @received_messages.each do |message|
          .message
            .image
              - if message.from.avatar.present?
                = image_tag message.from.avatar.image.thumb('50x50#').url
            .content
              %p.subject= message.subject
              = link_to "Read Message", message_path(message), "data-toggle" => 'modal', "data-target" => "#read-message-modal"
  .accordion-group
    .accordion-heading
      = link_to 'School Messages (2)', '#school-messages', class: 'accordion-toggle', 'data-parent' => '#inbox-accordion', 'data-toggle' => 'collapse'
    #school-messages.accordion-body.collapse
      .accordion-inner
        .message
          .image= image_tag("http://placekitten.com/50/50")
          .content
            %p.subject= lipsum(50)
            = link_to "Read Message", '#read-message-modal', class: 'btn', "data-toggle" => 'modal'
        .message
          .image= image_tag("http://placekitten.com/50/50")
          .content
            %p.subject= lipsum(50)
            = link_to "Read Message", '#read-message-modal', "data-toggle" => 'modal'
  .accordion-group
    .accordion-heading
      = link_to 'Teacher Messages (0)', '#teacher-messages', class: 'accordion-toggle', 'data-parent' => '#inbox-accordion', 'data-toggle' => 'collapse'
    #teacher-messages.accordion-body.collapse
      .accordion-inner
        .message
          .image= image_tag("http://placekitten.com/50/50")
          .content
            %p.subject= lipsum(50)
            = link_to "Read Message", '#read-message-modal', class: 'btn', "data-toggle" => 'modal'
        .message
          .image= image_tag("http://placekitten.com/50/50")
          .content
            %p.subject= lipsum(50)
            = link_to "Read Message", '#read-message-modal', "data-toggle" => 'modal'
  .accordion-group
    .accordion-heading
      = link_to 'System Messages (0)', '#system-messages', class: 'accordion-toggle', 'data-parent' => '#inbox-accordion', 'data-toggle' => 'collapse'
    #system-messages.accordion-body.collapse
      .accordion-inner
        .message
          .image= image_tag("http://placekitten.com/50/50")
          .content
            %p.subject= lipsum(50)
            = link_to "Read Message", '#read-message-modal', class: 'btn', "data-toggle" => 'modal'
        .message
          .image= image_tag("http://placekitten.com/50/50")
          .content
            %p.subject= lipsum(50)
            = link_to "Read Message", '#read-message-modal', "data-toggle" => 'modal'

= link_to "Send a message", '#send-message-modal', class: 'btn', 'data-toggle' => 'modal'

#read-message-modal.modal.hide
  .modal-body

#send-message-modal.modal.hide
  %h3 Send Message Header
  %p= lipsum 100
  .row
    .span3
      .select-message
        %strong Select Message
        = select_tag "Select Your Message..."
      .select-recipient
        %strong Select Who To Send It To
        .image-placeholder
          Paginated Friend List
    .span2
      %strong Select Image
      %p images here...
  = link_to "Preview Message", "#", class: 'btn btn-primary'
