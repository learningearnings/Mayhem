.auctions-content
  .span8
    .auctions
      .auction_links
        = link_to "Back to Auctions", school_admins_auctions_path, class: 'btn awesome-button'
      .auction-item
        = semantic_form_for [:school_admins, @auction] do |f|
          = f.label :product
          = f.select :product_id, @products.map{|p| [p.name, p.id] }
          = f.label :start_date
          = f.text_field :start_date, :id => 'datepicker', :value => @auction.start_date.strftime("%d-%m-%Y %I:%M %P" )
          = f.label :end_date
          = f.text_field :end_date, :id => 'datepicker2',:value => @auction.end_date.strftime("%d-%m-%Y %I:%M %P" )
          = f.label :min_grade
          = f.select :min_grade, School::GRADES
          = f.label :max_grade
          = f.select :max_grade, School::GRADES
          %br
          = f.submit

:javascript
  $(function() {
    $('#datepicker').datetimepicker({dateFormat: "dd-mm-yy", timeFormat: "hh:mm tt"});
  });
  $(function() {
    $('#datepicker2').datetimepicker({dateFormat: "dd-mm-yy", timeFormat: "hh:mm tt"});
  });
