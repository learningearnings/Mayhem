.reward-highlights
  - products.each do |product|
    .product
      .product-image
        - if product.images.present?
          - product_image_url = product.images[0].attachment.url(:product)
          = link_to resized_image(product_image_url, '80x80#'), spree.product_path(product)
      .product-details
        = link_to truncate("#{product.name}", :length => 50), spree.product_path(product), :class => 'info', :itemprop => "name", :title => product.name
        .price.selling{:itemprop => "price"}= product.price
